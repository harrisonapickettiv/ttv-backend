{
  "name": "ttv-backend",
  "version": "1.0.0",
  "description": "GraphQL API for Tabletop Vault board game e-commerce",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:codegen\"",
    "dev:server": "tsx watch src/index.ts",
    "dev:codegen": "graphql-codegen --config codegen.ts --watch",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:verify": "tsx prisma/verify.ts",
    "prisma:generate:test": "prisma generate --schema=prisma/schema.test.prisma",
    "prisma:migrate:test": "prisma migrate dev --schema=prisma/schema.test.prisma --skip-seed",
    "codegen": "graphql-codegen --config codegen.ts",
    "generate": "npm run prisma:generate && npm run codegen",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:once": "vitest run"
  },
  "keywords": [
    "graphql",
    "apollo",
    "prisma",
    "typescript",
    "ecommerce"
  ],
  "author": "Harrison Alexander Pickett, IV",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@prisma/client": "^6.17.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.0.1",
    "@graphql-codegen/typescript": "^5.0.2",
    "@graphql-codegen/typescript-operations": "^5.0.2",
    "@graphql-codegen/typescript-resolvers": "^5.1.0",
    "@parcel/watcher": "^2.5.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "prisma": "^6.17.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
